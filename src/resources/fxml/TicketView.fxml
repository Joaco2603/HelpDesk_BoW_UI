<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="cr.ac.ucenfotec.ui.javafx.TicketViewController"
      spacing="15" styleClass="view-container">
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
    <!-- TÃ­tulo -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="ðŸ“‹ GestiÃ³n de Tickets" styleClass="view-title">
            <font>
                <Font name="System Bold" size="24"/>
            </font>
        </Label>
    </HBox>
    
    <Separator/>
    
    <!-- Contenedor principal con split -->
    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        
        <!-- Panel izquierdo: Tabla de tickets -->
        <VBox spacing="10">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            
            <Label text="Lista de Tickets" styleClass="section-title">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Label>
            
            <TableView fx:id="ticketsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="asuntoColumn" text="Asunto" prefWidth="200"/>
                    <TableColumn fx:id="estadoColumn" text="Estado" prefWidth="100"/>
                    <TableColumn fx:id="prioridadColumn" text="Prioridad" prefWidth="100"/>
                    <TableColumn fx:id="departamentoColumn" text="Departamento" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
        
        <!-- Panel derecho: Formulario de tickets -->
        <VBox spacing="15">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            
            <Label text="Detalles del Ticket" styleClass="section-title">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Label>
            
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <VBox spacing="12">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>
                    
                    <!-- Asunto -->
                    <VBox spacing="5">
                        <Label text="Asunto *" styleClass="field-label">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Label>
                        <TextField fx:id="asuntoField" promptText="Ingrese el asunto del ticket"/>
                    </VBox>
                    
                    <!-- DescripciÃ³n -->
                    <VBox spacing="5">
                        <Label text="DescripciÃ³n *" styleClass="field-label">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Label>
                        <TextArea fx:id="descripcionArea" 
                                 promptText="Describa detalladamente el problema"
                                 wrapText="true" prefRowCount="6"/>
                    </VBox>
                    
                    <!-- Estado -->
                    <VBox spacing="5">
                        <Label text="Estado *" styleClass="field-label">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="estadoCombo" maxWidth="Infinity"/>
                    </VBox>
                    
                    <!-- Prioridad -->
                    <VBox spacing="5">
                        <Label text="Prioridad *" styleClass="field-label">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="prioridadCombo" maxWidth="Infinity"/>
                    </VBox>
                    
                    <!-- Departamento -->
                    <VBox spacing="5">
                        <Label text="Departamento *" styleClass="field-label">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="departamentoCombo" maxWidth="Infinity"/>
                    </VBox>
                    
                    <!-- ClasificaciÃ³n BoW -->
                    <VBox spacing="5">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="ClasificaciÃ³n BoW" styleClass="field-label">
                                <font>
                                    <Font name="System Bold" size="12"/>
                                </font>
                            </Label>
                            <Button fx:id="classifyButton" text="ðŸ” Clasificar" 
                                   onAction="#handleClassify" styleClass="secondary-button"/>
                        </HBox>
                        <Label fx:id="clasificacionLabel" 
                               styleClass="classification-label"
                               wrapText="true"
                               minHeight="50">
                            <font>
                                <Font size="11"/>
                            </font>
                        </Label>
                    </VBox>
                    
                    <!-- Botones de acciÃ³n -->
                    <VBox spacing="8">
                        <padding>
                            <Insets top="10"/>
                        </padding>
                        
                        <Button fx:id="createButton" text="âž• Crear Ticket" 
                               onAction="#handleCreate" styleClass="primary-button"
                               maxWidth="Infinity" prefHeight="35">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Button>
                        
                        <Button fx:id="updateButton" text="âœï¸ Actualizar" 
                               onAction="#handleUpdate" styleClass="secondary-button"
                               maxWidth="Infinity" prefHeight="35">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Button>
                        
                        <Button fx:id="deleteButton" text="ðŸ—‘ï¸ Eliminar" 
                               onAction="#handleDelete" styleClass="danger-button"
                               maxWidth="Infinity" prefHeight="35">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Button>
                        
                        <Button fx:id="clearButton" text="ðŸ”„ Limpiar" 
                               onAction="#handleClear" styleClass="secondary-button"
                               maxWidth="Infinity" prefHeight="35">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Button>
                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </SplitPane>
</VBox>
